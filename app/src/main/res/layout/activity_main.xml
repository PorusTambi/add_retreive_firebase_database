<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.porus.cybertreasure.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add value "
        android:id="@+id/addstring"
        android:layout_below="@+id/cn"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln"
        android:hint="Location name"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cn"
        android:layout_alignStart="@+id/cn" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cn"
        android:hint="coupon no"
        android:layout_below="@+id/ln"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/el"
        android:layout_below="@+id/addstring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:hint="Enter Location" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET VALUES"
        android:id="@+id/gv"
        android:layout_below="@+id/el"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New Text"
        android:id="@+id/tv"
        android:layout_below="@+id/gv"
        android:layout_centerHorizontal="true"
        android:minHeight="56dp"
        android:textSize="40dp" />

</RelativeLayout>
